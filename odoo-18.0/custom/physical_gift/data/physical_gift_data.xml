<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Demo Physical Gift Programs -->
        <record id="program_vietinbank" model="physical.gift.program">
            <field name="name">Vietinbank</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="creator_id" ref="base.user_admin"/>
            <field name="state">active</field>
            <field name="description">Chương trình quà tặng cho khách hàng Vietinbank</field>
            <field name="start_date">2024-01-01</field>
            <field name="end_date">2024-12-31</field>
        </record>

        <record id="program_hn_loyalty" model="physical.gift.program">
            <field name="name">HN's Loyalty</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="creator_id" ref="base.user_admin"/>
            <field name="state">active</field>
            <field name="description">Chương trình loyalty cho khách hàng HN</field>
            <field name="start_date">2024-02-01</field>
            <field name="end_date">2024-11-30</field>
        </record>

        <record id="program_sc_bank" model="physical.gift.program">
            <field name="name">Chương trình SC-Bank</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="creator_id" ref="base.user_admin"/>
            <field name="state">active</field>
            <field name="description">Chương trình quà tặng cho SC-Bank</field>
            <field name="start_date">2024-03-01</field>
            <field name="end_date">2024-10-31</field>
        </record>

        <record id="program_aia_vietnam" model="physical.gift.program">
            <field name="name">AIA Vietnam Program</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="creator_id" ref="base.user_admin"/>
            <field name="state">active</field>
            <field name="description">Chương trình quà tặng cho khách hàng AIA Vietnam</field>
            <field name="start_date">2024-04-01</field>
            <field name="end_date">2024-09-30</field>
        </record>

        <!-- Demo Gift Items -->
        <record id="gift_item_1" model="physical.gift.item">
            <field name="name">Voucher 500k</field>
            <field name="program_id" ref="program_vietinbank"/>
            <field name="quantity">100</field>
            <field name="unit_price">500000</field>
        </record>

        <record id="gift_item_2" model="physical.gift.item">
            <field name="name">Voucher 1M</field>
            <field name="program_id" ref="program_vietinbank"/>
            <field name="quantity">50</field>
            <field name="unit_price">1000000</field>
        </record>

        <record id="gift_item_3" model="physical.gift.item">
            <field name="name">Gift Card</field>
            <field name="program_id" ref="program_hn_loyalty"/>
            <field name="quantity">200</field>
            <field name="unit_price">200000</field>
        </record>

        <record id="gift_item_4" model="physical.gift.item">
            <field name="name">Premium Gift</field>
            <field name="program_id" ref="program_sc_bank"/>
            <field name="quantity">75</field>
            <field name="unit_price">1500000</field>
        </record>

        <record id="gift_item_5" model="physical.gift.item">
            <field name="name">Insurance Package</field>
            <field name="program_id" ref="program_aia_vietnam"/>
            <field name="quantity">25</field>
            <field name="unit_price">5000000</field>
        </record>
    </data>
</odoo> 