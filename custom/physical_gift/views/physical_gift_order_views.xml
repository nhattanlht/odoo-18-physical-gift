<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- list View -->
        <record id="view_physical_gift_order_list" model="ir.ui.view">
            <field name="name">physical.gift.order.list</field>
            <field name="model">physical.gift.order</field>
            <field name="arch" type="xml">
                <list string="Danh sách đơn hàng" editable="bottom">
                    <field name="name"/>
                    <field name="program_id"/>
                    <field name="total_order_value"/>
                    <field name="recipient_name"/>
                    <field name="recipient_phone"/>
                    <field name="order_status" widget="badge"
                           decoration-info="order_status == 'draft'"
                           decoration-success="order_status == 'confirmed'"
                           decoration-warning="order_status == 'processing'"
                           decoration-primary="order_status == 'shipped'"
                           decoration-danger="order_status == 'cancelled'"
                           decoration-muted="order_status == 'returned'"/>
                    <field name="order_time"/>
                    <field name="error_content"/>
                </list>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_physical_gift_order_kanban" model="ir.ui.view">
            <field name="name">physical.gift.order.kanban</field>
            <field name="model">physical.gift.order</field>
            <field name="arch" type="xml">
                <kanban default_group_by="order_status" class="o_kanban_small_column">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record">
                                <div class="o_kanban_details">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <div><strong>Người nhận:</strong> <field name="recipient_name"/></div>
                                    <div><strong>SDT:</strong> <field name="recipient_phone"/></div>
                                    <div><field name="total_order_value"/></div>
                                    <div><field name="order_time"/></div>
                                    <div>
                                        <field name="order_status" widget="badge"
                                               decoration-info="order_status == 'draft'"
                                               decoration-success="order_status == 'confirmed'"
                                               decoration-warning="order_status == 'processing'"
                                               decoration-primary="order_status == 'shipped'"
                                               decoration-danger="order_status == 'cancelled'"
                                               decoration-muted="order_status == 'returned'"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_physical_gift_order_form" model="ir.ui.view">
            <field name="name">physical.gift.order.form</field>
            <field name="model">physical.gift.order</field>
            <field name="arch" type="xml">
                <form string="Đơn hàng">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Mã đơn hàng..." class="oe_inline"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Thông tin đơn hàng">
                                <field name="program_id" placeholder="Chọn chương trình..."/>
                                <field name="total_order_value"/>
                                <field name="voucher_code" placeholder="Mã voucher..."/>
                            </group>
                            <group string="Thông tin người nhận">
                                <field name="recipient_name" placeholder="Tên người nhận..."/>
                                <field name="recipient_phone" placeholder="Số điện thoại..."/>
                            </group>
                        </group>
                        <group>
                            <group string="Thông tin vận chuyển">
                                <field name="shipping_unit_id" placeholder="Chọn đơn vị vận chuyển..."/>
                                <field name="waybill_code" placeholder="Mã vận đơn..."/>
                            </group>
                            <group string="Thông tin thanh toán">
                                <field name="payment_gateway"/>
                                <field name="payment_status"/>
                                <field name="transaction_code" placeholder="Mã giao dịch..."/>
                            </group>
                        </group>
                        <group>
                            <group string="Thông tin sản phẩm">
                                <field name="product_type"/>
                            </group>
                            <group string="Thông tin thời gian">
                                <field name="order_time"/>
                                <field name="create_date"/>
                            </group>
                        </group>
                        <group>
                            <group string="Trạng thái">
                                <field name="order_status"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Dòng sản phẩm" name="order_lines">
                                <field name="order_line_ids">
                                    <list editable="bottom">
                                        <field name="item_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="total_price" readonly="1"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Thông tin lỗi" name="error">
                                <field name="error_content" placeholder="Nội dung lỗi..."/>
                            </page>
                            <page string="Ghi chú" name="notes">
                                <field name="notes" placeholder="Ghi chú..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_physical_gift_order_search" model="ir.ui.view">
            <field name="name">physical.gift.order.search</field>
            <field name="model">physical.gift.order</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm đơn hàng">
                    <field name="program_id"/>
                    <field name="order_time"/>
                    <field name="recipient_phone"/>
                    <field name="voucher_code"/>
                    <field name="name"/>
                    <field name="order_status"/>
                    <field name="shipping_unit_id"/>
                    <field name="waybill_code"/>
                    <field name="payment_gateway"/>
                    <field name="payment_status"/>
                    <field name="transaction_code"/>
                    <field name="product_type"/>
                    <field name="error_content"/>
                    <separator/>
                    <filter string="Nháp" name="draft" domain="[('order_status', '=', 'draft')]"/>
                    <filter string="Đã xác nhận" name="confirmed" domain="[('order_status', '=', 'confirmed')]"/>
                    <filter string="Đang xử lý" name="processing" domain="[('order_status', '=', 'processing')]"/>
                    <filter string="Đã gửi hàng" name="shipped" domain="[('order_status', '=', 'shipped')]"/>
                    <filter string="Đã giao hàng" name="delivered" domain="[('order_status', '=', 'delivered')]"/>
                    <filter string="Đã hủy" name="cancelled" domain="[('order_status', '=', 'cancelled')]"/>
                    <filter string="Đã trả hàng" name="returned" domain="[('order_status', '=', 'returned')]"/>
                    <separator/>
                    <filter string="Chờ thanh toán" name="pending_payment"
                            domain="[('payment_status', '=', 'pending')]"/>
                    <filter string="Đã thanh toán" name="paid" domain="[('payment_status', '=', 'paid')]"/>
                    <filter string="Thanh toán thất bại" name="failed_payment"
                            domain="[('payment_status', '=', 'failed')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Chương trình" name="group_program" context="{'group_by': 'program_id'}"/>
                        <filter string="Trạng thái thanh toán" name="group_payment_status"
                                context="{'group_by': 'payment_status'}"/>
                        <filter string="Đơn vị vận chuyển" name="group_shipping"
                                context="{'group_by': 'shipping_unit_id'}"/>
                        <filter string="Loại sản phẩm" name="group_product_type"
                                context="{'group_by': 'product_type'}"/>
                        <filter string="Ngày đặt hàng" name="group_order_time" context="{'group_by': 'order_time'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action Window -->
        <record id="action_physical_gift_order" model="ir.actions.act_window">
            <field name="name">Đơn hàng</field>
            <field name="res_model">physical.gift.order</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'active_test': False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo đơn hàng đầu tiên
                </p>
                <p>
                    Quản lý đơn hàng, thông tin người nhận, vận chuyển và thanh toán.
                </p>
            </field>
        </record>

    </data>
</odoo>
