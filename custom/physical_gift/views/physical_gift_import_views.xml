<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree view phiếu nhập -->
        <record id="view_physical_gift_import_list" model="ir.ui.view">
            <field name="name">physical.gift.import.list</field>
            <field name="model">physical.gift.import</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="import_date"/>
                    <field name="supplier_id"/>
                    <field name="program_id"/>
                    <field name="state" widget="badge"
                           decoration-info="state == 'draft'"
                           decoration-success="state == 'confirmed'"
                           decoration-warning="state == 'done'"
                           decoration-danger="state == 'cancelled'"/>
                </list>
            </field>
        </record>

        <record id="view_physical_gift_import_kanban" model="ir.ui.view">
            <field name="name">physical.gift.import.kanban</field>
            <field name="model">physical.gift.import</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column" default_group_by="state">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record">
                                <div class="o_kanban_header">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <span class="badge badge-primary">
                                        <field name="state"/>
                                    </span>
                                </div>
                                <div>
                                    <small>Ngày nhập:
                                        <field name="import_date"/>
                                    </small>
                                    <br/>
                                    <small>Nhà cung cấp:
                                        <field name="supplier_id"/>
                                    </small>
                                    <br/>
                                    <small>Chương trình:
                                        <field name="program_id"/>
                                    </small>
                                </div>
                                <div class="mt8">
                                    <small>Số dòng hàng:
                                        <field name="line_count"/>
                                    </small>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Form view phiếu nhập -->
        <record id="view_physical_gift_import_form" model="ir.ui.view">
            <field name="name">physical.gift.import.form</field>
            <field name="model">physical.gift.import</field>
            <field name="arch" type="xml">
                <form string="Phiếu nhập hàng">
                    <header>
                        <button name="action_confirm" string="Xác nhận" type="object"
                                modifiers="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_done" string="Hoàn thành" type="object"
                                modifiers="{'invisible': [('state', '!=', 'confirmed')]}"/>
                        <button name="action_cancel" string="Hủy" type="object"
                                modifiers="{'invisible': [('state', 'not in', ['draft', 'confirmed'])]}"/>
                        <button name="action_reset_to_draft" string="Đặt lại" type="object"
                                modifiers="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="import_date"/>
                            <field name="supplier_id"/>
                            <field name="program_id"/>
                            <field name="state" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Chi tiết hàng nhập">
                                <field name="line_ids">
                                    <list editable="bottom">
                                        <field name="item_id"/>
                                        <field name="sku"/>
                                        <field name="import_quantity"/>
                                        <field name="export_return_quantity"/>
                                        <field name="import_price_excl_vat"/>
                                        <field name="sale_price_incl_vat"/>
                                        <field name="vat_percentage"/>
                                        <field name="points"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Ghi chú">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view -->
        <record id="view_physical_gift_import_search" model="ir.ui.view">
            <field name="name">physical.gift.import.search</field>
            <field name="model">physical.gift.import</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="supplier_id"/>
                    <field name="program_id"/>
                    <filter string="Nháp" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Đã xác nhận" name="confirmed" domain="[('state','=','confirmed')]"/>
                    <filter string="Hoàn thành" name="done" domain="[('state','=','done')]"/>
                    <filter string="Đã hủy" name="cancelled" domain="[('state','=','cancelled')]"/>
                </search>
            </field>
        </record>

        <!-- Action menu -->
        <record id="action_physical_gift_import" model="ir.actions.act_window">
            <field name="name">Phiếu nhập hàng</field>
            <field name="res_model">physical.gift.import</field>
            <field name="view_mode">kanban,list,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_physical_gift_import_root" name="Nhập hàng" sequence="10"/>
        <menuitem id="menu_physical_gift_import" name="Phiếu nhập" parent="menu_physical_gift_import_root"
                  action="action_physical_gift_import"/>
    </data>
</odoo>
