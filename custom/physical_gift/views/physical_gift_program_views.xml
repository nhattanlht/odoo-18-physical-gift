<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_physical_gift_program_tree" model="ir.ui.view">
            <field name="name">physical.gift.program.tree</field>
            <field name="model">physical.gift.program</field>
            <field name="arch" type="xml">
                <list string="Chương trình">
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <field name="name_vi" readonly="1"/>
                    <field name="name_en"/>
                    <field name="company_id"/>
                    <field name="brand_redeem_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_physical_gift_program_form" model="ir.ui.view">
            <field name="name">physical.gift.program.form</field>
            <field name="model">physical.gift.program</field>
            <field name="arch" type="xml">
                <form string="Chương trình">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name_vi" placeholder="Tên chương trình tiếng Việt..." class="oe_inline"/>
                            </h1>
                            <h2>
                                <field name="name_en" placeholder="Tên chương trình tiếng Anh..." class="oe_inline"/>
                            </h2>
                        </div>
                        <group>
                            <group string="Thông tin chương trình">
                                <field name="active"/>
                                <field name="logo" widget="image" class="oe_avatar"/>
                                <field name="description" placeholder="Mô tả chương trình..."/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                            <group string="Thông tin redeem">
                                <field name="brand_redeem_id"/>
                                <field name="bill_number"/>
                            </group>
                        </group>
                        <group>
                            <group string="Thống kê">
                                <field name="category_count" readonly="1"/>
                            </group>
                            <group string="Thông tin tạo"/>
                        </group>
                        <notebook>
                            <page string="Danh mục" name="categories">
                                <field name="category_ids" widget="many2many_tags" domain="[('active', '=', True)]"/>
                            </page>
                            <page string="Sản phẩm">
                                <field name="item_ids">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="category_id" domain="[('id', 'in', parent.category_ids)]"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_physical_gift_program_search" model="ir.ui.view">
            <field name="name">physical.gift.program.search</field>
            <field name="model">physical.gift.program</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm chương trình">
                    <field name="name_vi"/>
                    <field name="name_en"/>
                    <field name="company_id"/>
                    <field name="brand_redeem_id"/>
                    <field name="bill_number"/>
                    <separator/>
                    <filter string="Có danh mục" name="has_categories" domain="[('category_count', '>', 0)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Công ty" name="group_company" context="{'group_by': 'company_id'}"/>
                        <filter string="Thương hiệu" name="group_brand" context="{'group_by': 'brand_redeem_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_physical_gift_program_kanban" model="ir.ui.view">
            <field name="name">physical.gift.program.kanban</field>
            <field name="model">physical.gift.program</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name_vi"/>
                    <field name="name_en"/>
                    <field name="company_id"/>
                    <field name="brand_redeem_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="description"/>
                    <field name="category_count"/>
                    <field name="active"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name_vi"/>
                                    </strong>
                                    <div class="o_kanban_image">
                                        <img t-att-src="kanban_image('physical.gift.program', 'logo', record.id.raw_value)"
                                             alt="Logo" class="o_image_64_cover"/>
                                    </div>
                                    <div class="mt8">
                                        <t t-if="record.active.raw_value">
                                            <span class="badge badge-success">active</span>
                                        </t>
                                        <t t-if="!record.active.raw_value">
                                            <span class="badge badge-danger">inactive</span>
                                        </t>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="name_en"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="company_id"/>
                                            <br/>
                                            <field name="brand_redeem_id"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <span class="badge badge-info">
                                                <i class="fa fa-tags" title="Danh mục"/>
                                                <field name="category_count"/>
                                            </span>
                                            <span class="badge badge-warning">
                                                <i class="fa fa-truck" title="Đơn vị vận chuyển"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action -->
        <record id="action_physical_gift_program" model="ir.actions.act_window">
            <field name="name">Chương trình</field>
            <field name="res_model">physical.gift.program</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'active_test': False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo chương trình đầu tiên
                </p>
                <p>
                    Quản lý chương trình quà tặng, trong mỗi chương trình có danh sách
                    danh mục và danh sách sản phẩm.
                </p>
            </field>
        </record>

    </data>
</odoo>
