<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_physical_gift_item_tree" model="ir.ui.view">
            <field name="name">physical.gift.item.tree</field>
            <field name="model">physical.gift.item</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Danh sách quà">
                    <!-- Hình ảnh nhỏ -->
                    <field name="image" widget="image" options="{'size': [40, 40]}"/>

                    <!-- Thông tin còn lại -->
                    <field name="name"/>
                    <field name="brand_id"/>
                    <field name="category_id"/>
                    <field name="supplier_id"/>
                    <field name="quantity"/>
                    <field name="unit_price"/>
                    <field name="total_price"/>
                </list>
            </field>
        </record>

        <record id="view_physical_gift_item_form" model="ir.ui.view">
            <field name="name">physical.gift.item.form</field>
            <field name="model">physical.gift.item</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Quà tặng">
                    <sheet>
                        <group>
                            <group>
                                <!-- Hình ảnh -->
                                <field name="image" widget="image"/>
                            </group>
                            <group>
                                <field name="name"/>
                                <field name="brand_id"/>
                                <field name="category_id"/>
                                <field name="supplier_id"/>
                                <field name="quantity"/>
                                <field name="unit_price"/>
                                <field name="total_price"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_physical_gift_item_kanban" model="ir.ui.view">
            <field name="name">physical.gift.item.kanban</field>
            <field name="model">physical.gift.item</field>
            <field name="arch" type="xml">
                <kanban default_order="name">
                    <field name="name"/>
                    <field name="unit_price"/>
                    <field name="brand_id"/>
                    <field name="category_id"/>
                    <field name="supplier_id"/>
                    <field name="quantity"/>
                    <field name="total_price"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click o_kanban_hoverable">
                                <div class="o_kanban_details">
                                    <div class="o_kanban_image">
                                        <img t-att-src="kanban_image('physical.gift.category', 'image', record.id.raw_value)"
                                             alt="Image"/>
                                    </div>
                                    <!-- Tên quà -->
                                    <div class="fw-bold fs-5 mb-1">
                                        <field name="name"/>
                                    </div>

                                    <!-- Đơn giá -->
                                    <div class="text-muted mb-1">
                                        <strong>Giá:</strong>
                                        <field name="unit_price"/>₫
                                    </div>

                                    <!-- Thương hiệu / Danh mục -->
                                    <div class="mb-1">
                                        <strong>Thương hiệu:</strong>
                                        <field name="brand_id"/>
                                        <br/>
                                        <strong>Danh mục:</strong>
                                        <field name="category_id"/>
                                    </div>

                                    <!-- Nhà cung cấp -->
                                    <div class="mb-1">
                                        <strong>Nhà cung cấp:</strong>
                                        <field name="supplier_id"/>
                                    </div>

                                    <!-- Số lượng / Tổng giá -->
                                    <div class="d-flex justify-content-between mt-2">
                                        <span>
                                            <strong>SL:</strong>
                                            <field name="quantity"/>
                                        </span>
                                        <span class="fw-bold text-primary">Tổng:<field name="total_price"/>₫
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_physical_gift_item_search" model="ir.ui.view">
            <field name="name">physical.gift.item.search</field>
            <field name="model">physical.gift.item</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm quà">
                    <field name="name"/>
                    <field name="brand_id"/>
                    <field name="category_id"/>
                    <field name="supplier_id"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_brand" string="Thương hiệu" context="{'group_by': 'brand_id'}"/>
                        <filter name="group_by_category" string="Danh mục" context="{'group_by': 'category_id'}"/>
                        <filter name="group_by_supplier" string="Nhà cung cấp" context="{'group_by': 'supplier_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_physical_gift_item" model="ir.actions.act_window">
            <field name="name">Danh sách quà</field>
            <field name="res_model">physical.gift.item</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo quà tặng đầu tiên
                </p>
                <p>
                    Tạo quà tặng mới để thêm vào chương trình.
                </p>
            </field>
        </record>
    </data>
</odoo>