<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_physical_gift_item_tree" model="ir.ui.view">
            <field name="name">physical.gift.item.tree</field>
            <field name="model">physical.gift.item</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Danh sách quà">
                    <field name="name"/>
                    <field name="brand_id"/>
                    <field name="category_id"/>
                    <field name="supplier_id"/>
                    <field name="quantity"/>
                    <field name="unit_price"/>
                    <field name="total_price"/>
                </list>
            </field>
        </record>

        <record id="view_physical_gift_item_form" model="ir.ui.view">
            <field name="name">physical.gift.item.form</field>
            <field name="model">physical.gift.item</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Quà tặng">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="brand_id"/>
                                <field name="category_id"/>
                                <field name="supplier_id"/>
                            </group>
                            <group>
                                <field name="quantity"/>
                                <field name="unit_price"/>
                                <field name="total_price"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_physical_gift_item_kanban" model="ir.ui.view">
            <field name="name">physical.gift.item.kanban</field>
            <field name="model">physical.gift.item</field>
            <!-- FIX: Explicitly define the view type as 'kanban' to resolve parsing error -->
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban>
                    <!-- Fields required for the kanban view to function -->
                    <field name="name"/>
                    <field name="brand_id"/>
                    <field name="quantity"/>
                    <field name="active"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="text-muted">
                                        <field name="brand_id"/>
                                    </div>
                                    <div class="mt-2">
                                        <span>
                                            <i class="fa fa-archive"/>
                                            <t t-esc="record.quantity.value"/>
                                        </span>
                                    </div>
                                    <div>
                                        <field name="active" widget="boolean_toggle"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_physical_gift_item_search" model="ir.ui.view">
            <field name="name">physical.gift.item.search</field>
            <field name="model">physical.gift.item</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm quà">
                    <field name="name"/>
                    <field name="brand_id"/>
                    <field name="category_id"/>
                    <field name="supplier_id"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_brand" string="Thương hiệu" context="{'group_by': 'brand_id'}"/>
                        <filter name="group_by_category" string="Danh mục" context="{'group_by': 'category_id'}"/>
                        <filter name="group_by_supplier" string="Nhà cung cấp" context="{'group_by': 'supplier_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_physical_gift_item" model="ir.actions.act_window">
            <field name="name">Danh sách quà</field>
            <field name="res_model">physical.gift.item</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo quà tặng đầu tiên
                </p>
                <p>
                    Tạo quà tặng mới để thêm vào chương trình.
                </p>
            </field>
        </record>
    </data>
</odoo>