<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Supplier Tree View -->
        <record id="view_physical_gift_supplier_tree" model="ir.ui.view">
            <field name="name">physical.gift.supplier.tree</field>
            <field name="model">physical.gift.supplier</field>
            <field name="arch" type="xml">
                <list string="Danh sách nhà cung cấp">
                    <field name="name"/>
                    <field name="full_name"/>
                    <field name="representative_name"/>
                    <field name="tax_code"/>
                    <field name="account_number"/>
                    <field name="bank_name"/>
                    <field name="warehouse_code"/>
                    <field name="state" widget="badge" decoration-success="state == 'active'" decoration-danger="state == 'inactive'"/>
                    <field name="brand_count" widget="integer"/>
                    <field name="item_count" widget="integer"/>
                </list>
            </field>
        </record>

        <!-- Supplier Form View -->
        <record id="view_physical_gift_supplier_form" model="ir.ui.view">
            <field name="name">physical.gift.supplier.form</field>
            <field name="model">physical.gift.supplier</field>
            <field name="arch" type="xml">
                <form string="Nhà cung cấp">
                    <header>
                        <button name="action_activate" string="Active" type="object" 
                                class="btn-success" invisible="state == 'active'"/>
                        <button name="action_deactivate" string="Inactive" type="object" 
                                class="btn-danger" invisible="state == 'inactive'"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Tên viết tắt..." class="oe_inline"/>
                            </h1>
                            <h2>
                                <field name="full_name" placeholder="Tên đầy đủ..." class="oe_inline"/>
                            </h2>
                        </div>
                        <group>
                            <group string="Thông tin cơ bản">
                                <field name="representative_name" placeholder="Tên người đại diện..."/>
                                <field name="warehouse_code" placeholder="Mã kho..."/>
                                <field name="active" invisible="1"/>
                            </group>
                            <group string="Thông tin thuế và ngân hàng">
                                <field name="tax_code" placeholder="Mã số thuế..."/>
                                <field name="account_number" placeholder="Số tài khoản..."/>
                                <field name="bank_name" placeholder="Tên ngân hàng..."/>
                            </group>
                        </group>
                        <group>
                            <group string="Thống kê">
                                <field name="brand_count" readonly="1"/>
                                <field name="item_count" readonly="1"/>
                            </group>
                            <group string="Trạng thái">
                                <field name="state"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Thương hiệu cung cấp" name="brands">
                                <field name="brand_ids" widget="many2many_tags"/>
                            </page>
                            <page string="Sản phẩm cung cấp" name="items">
                                <field name="item_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="brand_id"/>
                                        <field name="category_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="total_price"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Supplier Search View -->
        <record id="view_physical_gift_supplier_search" model="ir.ui.view">
            <field name="name">physical.gift.supplier.search</field>
            <field name="model">physical.gift.supplier</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm nhà cung cấp">
                    <field name="name"/>
                    <field name="full_name"/>
                    <field name="representative_name"/>
                    <field name="tax_code"/>
                    <field name="account_number"/>
                    <field name="bank_name"/>
                    <field name="warehouse_code"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                    <filter string="Inactive" name="inactive" domain="[('state', '=', 'inactive')]"/>
                    <separator/>
                    <filter string="Có thương hiệu" name="has_brands" domain="[('brand_count', '>', 0)]"/>
                    <filter string="Có sản phẩm" name="has_items" domain="[('item_count', '>', 0)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Ngân hàng" name="group_bank" context="{'group_by': 'bank_name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Supplier Kanban View -->
        <record id="view_physical_gift_supplier_kanban" model="ir.ui.view">
            <field name="name">physical.gift.supplier.kanban</field>
            <field name="model">physical.gift.supplier</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="full_name"/>
                    <field name="representative_name"/>
                    <field name="tax_code"/>
                    <field name="account_number"/>
                    <field name="bank_name"/>
                    <field name="warehouse_code"/>
                    <field name="state"/>
                    <field name="brand_count"/>
                    <field name="item_count"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="full_name"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="representative_name"/>
                                            <br/>
                                            <field name="tax_code"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <span class="badge badge-info">
                                                <i class="fa fa-tags" title="Thương hiệu"/> <field name="brand_count"/>
                                            </span>
                                            <span class="badge badge-success">
                                                <i class="fa fa-cube" title="Sản phẩm"/> <field name="item_count"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Supplier Action -->
        <record id="action_physical_gift_supplier" model="ir.actions.act_window">
            <field name="name">Nhà cung cấp</field>
            <field name="res_model">physical.gift.supplier</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo nhà cung cấp đầu tiên
                </p>
                <p>
                    Quản lý nhà cung cấp, thông tin thuế, ngân hàng và các sản phẩm cung cấp.
                </p>
            </field>
        </record>
    </data>
</odoo> 