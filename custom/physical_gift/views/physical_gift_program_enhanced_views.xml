<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Program Tree View -->
        <record id="view_physical_gift_program_tree" model="ir.ui.view">
            <field name="name">physical.gift.program.tree</field>
            <field name="model">physical.gift.program</field>
            <field name="arch" type="xml">
                <list string="Chương trình" decoration-info="state == 'draft'" decoration-success="state == 'active'" decoration-danger="state == 'inactive'" decoration-muted="state == 'closed'">
                    <field name="name_vi" readonly="1"/>
                    <field name="name_en"/>
                    <field name="company_id"/>
                                            <field name="brand_redeem_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'active'" decoration-danger="state == 'inactive'" decoration-muted="state == 'closed'"/>
                        <field name="category_count" widget="integer"/>


                </list>
            </field>
        </record>

        <!-- Program Form View -->
        <record id="view_physical_gift_program_form" model="ir.ui.view">
            <field name="name">physical.gift.program.form</field>
            <field name="model">physical.gift.program</field>
            <field name="arch" type="xml">
                <form string="Chương trình">
                    <header>
                        <button name="action_activate" string="Kích hoạt" type="object" class="oe_highlight" invisible="state not in ('draft','inactive')"/>
                        <button name="action_deactivate" string="Tạm ngưng" type="object" invisible="state != 'active'"/>
                        <button name="action_close" string="Đóng" type="object" invisible="state != 'active'"/>
                        <button name="action_reset_to_draft" string="Đặt lại" type="object" invisible="state not in ('inactive','closed')"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,active,inactive"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name_vi" placeholder="Tên chương trình tiếng Việt..." class="oe_inline"/>
                            </h1>
                            <h2>
                                <field name="name_en" placeholder="Tên chương trình tiếng Anh..." class="oe_inline"/>
                            </h2>
                            <div class="o_row">
                                <field name="company_id" placeholder="Chọn công ty..." class="oe_inline"/>

                                <field name="active" invisible="1"/>
                            </div>
                        </div>
                        <group>
                            <group string="Thông tin chương trình">
                                <field name="description" placeholder="Mô tả chương trình..."/>
                                <field name="start_date"/>
                                <field name="end_date"/>

                            </group>
                            <group string="Thông tin redeem">
                                <field name="brand_redeem_id" placeholder="Chọn thương hiệu redeem..."/>
                                <field name="bill_number" placeholder="Số bill..."/>
                            </group>
                        </group>
                        <group>
                            <group string="Thống kê">
                                <field name="category_count" readonly="1"/>
                            </group>
                            <group string="Thông tin tạo">


                            </group>
                        </group>
                        <notebook>
                            <page string="Danh mục" name="categories">
                                <field name="category_ids" widget="many2many_tags"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Program Search View -->
        <record id="view_physical_gift_program_search" model="ir.ui.view">
            <field name="name">physical.gift.program.search</field>
            <field name="model">physical.gift.program</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm chương trình">
                    <field name="name_vi"/>
                    <field name="name_en"/>
                    <field name="company_id"/>
                    <field name="brand_redeem_id"/>
                    <field name="bill_number"/>
                    <separator/>
                    <filter string="Hoạt động" name="active" domain="[('state', '=', 'active')]"/>
                    <filter string="Nháp" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Không hoạt động" name="inactive" domain="[('state', '=', 'inactive')]"/>
                    <filter string="Đã đóng" name="closed" domain="[('state', '=', 'closed')]"/>
                    <separator/>
                    <filter string="Có danh mục" name="has_categories" domain="[('category_count', '>', 0)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Công ty" name="group_company" context="{'group_by': 'company_id'}"/>
                        <filter string="Thương hiệu" name="group_brand" context="{'group_by': 'brand_redeem_id'}"/>
                        <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>

                    </group>
                </search>
            </field>
        </record>

        <!-- Program Kanban View -->
        <record id="view_physical_gift_program_kanban" model="ir.ui.view">
            <field name="name">physical.gift.program.kanban</field>
            <field name="model">physical.gift.program</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="id"/>
                    <field name="name_vi"/>
                    <field name="name_en"/>
                    <field name="company_id"/>
                    <field name="brand_redeem_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>


                    <field name="description"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name_vi"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="name_en"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="company_id"/>
                                            <br/>
                                            <field name="brand_redeem_id"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <span class="badge badge-info">
                                                <i class="fa fa-tags" title="Danh mục"/> <field name="category_count"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Program Action -->
        <record id="action_physical_gift_program" model="ir.actions.act_window">
            <field name="name">Chương trình</field>
            <field name="res_model">physical.gift.program</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo chương trình đầu tiên
                </p>
                <p>
                    Quản lý chương trình quà tặng, trong mỗi chương trình có danh sách
                    danh mục và danh sách sản phẩm.
                </p>
            </field>
        </record>




    </data>
</odoo> 