<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_physical_gift_category_list" model="ir.ui.view">
            <field name="name">physical.gift.category.list</field>
            <field name="model">physical.gift.category</field>
            <field name="arch" type="xml">
                <list string="Danh mục quà" sample="1">
                    <field name="sequence" widget="handle"/>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="view_physical_gift_category_kanban" model="ir.ui.view">
            <field name="name">physical.gift.category.kanban</field>
            <field name="model">physical.gift.category</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="active"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('physical.gift.category', 'image', record.id.raw_value)"
                                         alt="Image"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="mt8">
                                    <t t-if="record.active.raw_value">
                                        <span class="badge badge-success">active</span>
                                    </t>
                                    <t t-if="!record.active.raw_value">
                                        <span class="badge badge-danger">inactive</span>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_physical_gift_category_form" model="ir.ui.view">
            <field name="name">physical.gift.category.form</field>
            <field name="model">physical.gift.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <widget name="web_ribbon" title="Đã lưu trữ" bg_color="bg-danger"
                                invisible="[('active', '=', True)]"/>

                        <div class="oe_button_box" name="button_box">
                            <button name="action_open_items" type="object" class="oe_stat_button" icon="fa-cubes">
                                <field name="item_count" widget="statinfo" string="Sản phẩm"/>
                            </button>
                        </div>

                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Tên danh mục..."/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="sequence"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Sản phẩm" name="items_page">
                                <field name="item_ids" nolabel="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="brand_id"/>
                                        <field name="supplier_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="total_price"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_physical_gift_category_search" model="ir.ui.view">
            <field name="name">physical.gift.category.search</field>
            <field name="model">physical.gift.category</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Tên hoặc Mã"
                           filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>

                    <separator/>
                    <filter name="filter_active" string="Đang hoạt động" domain="[('active', '=', True)]"
                            help="Chỉ hiển thị các danh mục đang hoạt động"/>
                    <filter name="filter_inactive" string="Không hoạt động" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="action_physical_gift_category" model="ir.actions.act_window">
            <field name="name">Danh mục quà tặng</field>
            <field name="res_model">physical.gift.category</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'active_test': False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Chưa có danh mục quà tặng nào.
                </p>
                <p>
                    Hãy tạo danh mục đầu tiên để bắt đầu quản lý quà tặng!
                </p>
            </field>
        </record>

    </data>
</odoo>